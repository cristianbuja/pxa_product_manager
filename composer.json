{
  "name": "pixelant/pxa-product-manager",
  "type": "typo3-cms-extension",
  "description": "",
  "license": ["GPL-2.0+"],
  "keywords": ["TYPO3 CMS"],
  "authors": [
    {
      "name": "Pixelant AB",
      "email": "info@pixelant.se",
      "role": "Developer"
    }
  ],
  "require": {
    "typo3/cms": "^8.7",
    "php": ">=7.0.0"
  },
  "require-dev": {
    "apache-solr-for-typo3/solr": "~6.1.3",
    "squizlabs/php_codesniffer": "2.*",
    "phpunit/phpunit": "~5.6.0",
    "nimut/testing-framework": "^1.1"
  },
  "replace": {
    "pxa_product_manager": "self.version"
  },
  "autoload": {
    "psr-4": {
      "Pixelant\\PxaProductManager\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pixelant\\PxaProductManager\\Tests\\": "Tests/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/pxa_product_manager ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/pxa_product_manager"
    ]
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/TYPO3-Solr/ext-solr.git"
    }
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "0.0.x-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
